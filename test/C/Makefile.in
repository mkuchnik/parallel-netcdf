srcdir	= @srcdir@
VPATH	= @srcdir@

include ../../macros.make

INCLUDES  = -I../../src/lib -I$(srcdir)/../common
LDFLAGS  += -L../../src/lib -L../common
LIBS     += -ltestutils -lpnetcdf

SRCS    = pres_temp_4D_wr.c \
          pres_temp_4D_rd.c

OBJS    = $(SRCS:.c=.o)
PROGS   = $(SRCS:.c=)

GARBAGE      = $(PROGS) *.nc
PACKING_LIST = $(SRCS) Makefile.in

all: $(PROGS)

pres_temp_4D_wr.o: pres_temp_4D_wr.c 

pres_temp_4D_wr: pres_temp_4D_wr.o $(LIBRARY)
	$(LINK.c) $< $(LDFLAGS) $(LIBS)

pres_temp_4D_rd.o: pres_temp_4D_rd.c 

pres_temp_4D_rd: pres_temp_4D_rd.o $(LIBRARY)
	$(LINK.c) $< $(LDFLAGS) $(LIBS)

testing: pres_temp_4D_wr pres_temp_4D_rd
	./pres_temp_4D_wr && ./pres_temp_4D_rd

verbose_testing: testing

include $(srcdir)/../../rules.make

