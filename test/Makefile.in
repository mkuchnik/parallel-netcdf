srcdir = @srcdir@
VPATH  = @srcdir@

include ../macros.make

SUBDIRS = common \
          nc_test \
          test_int \
          test_float \
          test_double \
          test_double_int \
          test_dtype \
          C \
          fandc \
          largefile \
          nonblocking \
          cdf_format \
          header \
          testcases \
          data

# Packing subdirs must include all directories
PACKING_SUBDIRS := $(SUBDIRS) nf_test nf90_test F90 subfile CXX

ifeq (@has_mpicxx@, yes)
SUBDIRS += CXX
endif

ifeq (@has_fortran@, yes)
SUBDIRS += nf_test
SUBDIRS += nf90_test
SUBDIRS += F90
endif

ifeq (@enable_subfiling@, yes)
SUBDIRS += subfile
endif

PACKING_LIST = Makefile.in

all: $(SUBDIRS)
$(SUBDIRS):
	$(MAKE) $(MFLAGS) -C $@

CHECK_DIRS = $(SUBDIRS:%=check-%)
check testing: $(CHECK_DIRS)
$(CHECK_DIRS):
	$(MAKE) $(MFLAGS) -C $(@:check-%=%) testing

VCHECK_DIRS = $(SUBDIRS:%=vcheck-%)
verbose_check verbose_testing: $(VCHECK_DIRS)
$(VCHECK_DIRS):
	$(MAKE) $(MFLAGS) -C $(@:vcheck-%=%) verbose_testing

PTEST_DIRS = $(SUBDIRS:%=ptest-%)
ptest: $(PTEST_DIRS)
$(PTEST_DIRS):
	$(MAKE) $(MFLAGS) -C $(@:ptest-%=%) ptest

INSTALLDIRS = $(SUBDIRS:%=install-%)
install: all $(INSTALLDIRS)
$(INSTALLDIRS): 
	$(MAKE) $(MFLAGS) -C $(@:install-%=%) install

UNINSTALLDIRS = $(SUBDIRS:%=uninstall-%)
uninstall: $(UNINSTALLDIRS)
$(UNINSTALLDIRS): 
	$(MAKE) $(MFLAGS) -C $(@:uninstall-%=%) uninstall

include $(srcdir)/../rules.make

.NOTPARALLEL:

