srcdir = @srcdir@
VPATH = @srcdir@

include ../macros.make

SUBDIRS = common \
          nc_test \
          test_int \
          test_float \
          test_double \
          test_double_int \
          test_dtype \
          C \
          fandc \
          largefile \
          nonblocking \
          test_inq_format \
          test_check_header \
          testcases \
          data

ifeq (@has_fortran@, yes)
SUBDIRS += nf_test
SUBDIRS += nf90_test
SUBDIRS += F90
endif

PACKING_LIST = Makefile.in

PACKING_SUBDIRS = $(SUBDIRS) nf_test nf90_test F90

all:
	set -e; for i in $(SUBDIRS); do ( cd $$i && $(MAKE) all ; ) ; done

# Eventually, this target will run all of the relevant tests
check testing: all
	cd nc_test && $(MAKE) testing
	if [ @has_fortran@ = yes ] ; then cd nf_test   && $(MAKE) testing ; fi
	if [ @has_fortran@ = yes ] ; then cd nf90_test && $(MAKE) testing ; fi
	if [ @has_fortran@ = yes ] ; then cd F90       && $(MAKE) testing ; fi
	cd C && $(MAKE) testing
	cd nonblocking && $(MAKE) testing
	cd testcases && $(MAKE) testing

verbose_check verbose_testing: all
	cd nc_test && $(MAKE) verbose_testing
	if [ @has_fortran@ = yes ] ; then cd nf_test   && $(MAKE) verbose_testing ; fi
	if [ @has_fortran@ = yes ] ; then cd nf90_test && $(MAKE) verbose_testing ; fi
	if [ @has_fortran@ = yes ] ; then cd F90       && $(MAKE) verbose_testing ; fi
	cd C && $(MAKE) verbose_testing
	cd nonblocking && $(MAKE) verbose_testing
	cd testcases && $(MAKE) verbose_testing

ptest: all
	if [ @has_fortran@ = yes ] ; then cd F90 && $(MAKE) ptest ; fi
	cd C && $(MAKE) ptest
	cd nonblocking && $(MAKE) ptest
	cd testcases && $(MAKE) ptest

include $(srcdir)/../rules.make

