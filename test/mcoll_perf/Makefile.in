srcdir		= @srcdir@
VPATH		= @srcdir@

INCDIR		= $(srcdir)/../../src/lib
LIBDIR		= ../../src/lib

INCLUDES	= -I$(INCDIR) -I../../src/lib -I$(srcdir)/../common

CC		= @MPICC@
CFLAGS          = @CFLAGS@ $(INCLUDES) 

SRCS		= mcoll_perf.c
OBJS		= $(SRCS:.c=.o)
PROGS		= mcoll_perf
LDFLAGS		= -L$(LIBDIR) -L../common @LDFLAGS@
LIBS		= -lpnetcdf -ltestutils @LIBS@

.c.o:
	$(CC) $(CFLAGS) -c $<

all:		$(PROGS)

mcoll_perf: mcoll_perf.o
	$(CC) -g -o $@ $@.o $(LDFLAGS) $(LIBS)

clean:
	rm -f $(OBJS) $(PROGS) *.nc

distclean: clean
	rm -f Makefile
