srcdir = @srcdir@
VPATH  = @srcdir@

include ../../macros.make

INCLUDES  = -I../../src/lib -I$(srcdir)/../common
LDFLAGS  += -L../../src/lib -L../common
LIBS     += -ltestutils -lpnetcdf

SRCS    = large_files.c

OBJS    = $(SRCS:.c=.o)
PROGS   = $(SRCS:.c=)

GARBAGE      = $(PROGS)
PACKING_LIST = $(SRCS) Makefile.in

all: $(PROGS)

large_files: large_files.o $(LIBRARY)
	$(LINK.c) $< $(LDFLAGS) $(LIBS)

include $(srcdir)/../../rules.make

