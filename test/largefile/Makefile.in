srcdir		= @srcdir@
VPATH		= @srcdir@

INCDIR		= $(srcdir)/../../src/lib
LIBDIR		= ../../src/lib

INCLUDES	= -I$(INCDIR) -I$(srcdir)/../common

CC		= @MPICC@
CFLAGS          = @CFLAGS@ $(INCLUDES) 

SRCS		= large_files.c
OBJS		= $(SRCS:.c=.o)
PROGS		= large_files
LDFLAGS		= -L$(LIBDIR) -L../common @LDFLAGS@
LIBS		= -lpnetcdf -ltestutils @LIBS@

.c.o:
	$(CC) $(CFLAGS) -c $<

all:		$(PROGS)

large_files: large_files.o
	$(CC) -o $@ $@.o $(LDFLAGS) $(LIBS)

clean:
		rm -f $(OBJS) $(PROGS) *.nc
