srcdir = @srcdir@
VPATH = @srcdir@

include ../../macros.make
# M4FLAGS         = -s -B7168
# CC		= cc -fullwarn -woff 1209,1506


INCLUDES	= -I$(srcdir)/../../src/lib -I../../src/lib -I$(srcdir)

ld_math		= $(MATHLIB)

SRCS		=   nc_test.c \
		    error.c \
		    test_get.c \
		    test_put.c \
		    test_read.c \
		    test_write.c \
		    test_iget.c \
		    test_iput.c \
		    util.c

OBJS		= $(SRCS:.c=.o)

lib_pnetcdf	= ../../src/lib/libpnetcdf.a
ld_pnetcdf	= -L../../src/lib -lpnetcdf

time_log	= times

GARBAGE		= nc_test test.nc scratch.nc lint.out $(time_log) test_get.c test_put.c test_iget.c test_iput.c

PACKING_LIST	=  $(SRCS) \
		    test_get.m4 \
		    test_put.m4 \
		    test_iget.m4 \
		    test_iput.m4 \
		    error.h \
	            tests.h \
		    depend	\
		    Makefile

all:		nc_test

test:		nc_test test.nc
	./nc_test
	@echo '*** Success ***'

readonly:	nc_test test.nc
	./nc_test -r

test.nc:  nc_test
	./nc_test -c

install:

uninstall:


nc_test:		$(OBJS) $(lib_pnetcdf)
	$(LINK.c) $(OBJS) $(ld_pnetcdf) $(ld_math) $(LIBS)

test_get.c:	test_get.m4

test_put.c:	test_put.m4

test_iget.c:	test_iget.m4

test_iput.c:	test_iput.m4

nctime:		nctime.o $(lib_pnetcdf)
	$(LINK.c) nctime.o $(ld_pnetcdf) $(ld_math) $(LIBS) 

time:	nctime
	time ./nctime 24 13 19 17 > $(time_log)
	awk -f timesum.awk < $(time_log)

saber_src:
	#load -C $(CPPFLAGS) $(SRCS) $(ld_pnetcdf) $(ld_math) $(LIBS)

# This simple testing target ensures that the test files are present
testing: test.nc nc_test
	$(RM) -f scratch.nc
	./nc_test && ./nc_test -c -2 && ./nc_test

verbose_testing: test.nc nc_test
	$(RM) -f scratch.nc
	./nc_test -v && ./nc_test -c -v -2 && ./nc_test -v

include $(srcdir)/../../rules.make
include $(srcdir)/depend
