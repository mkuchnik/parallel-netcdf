srcdir = @srcdir@
VPATH  = @srcdir@

include ../../macros.make

INCLUDES  = -I../../src/lib -I$(srcdir)/../common
FPPFLAGS += -I../../src/libf @FC_MODINC@../../src/libf90
LDFLAGS  += -L../../src/lib
LIBS     += -lpnetcdf $(MATHLIB) @LCOV_LIB@

C_SRCS   = mcoll_perf.c \
           test_bput.c

F77_SRCS = mcoll_testf77.f \
           test_bputf77.f

F90_SRCS = mcoll_testf.f90 \
           test_bputf.f90

PROGS     = $(C_SRCS:.c=)
OBJS      = $(C_SRCS:.c=.o)
ifeq (@has_fortran@, yes)
PROGS     += $(F77_SRCS:.f=)   $(F90_SRCS:.f90=)
OBJS      += $(F77_SRCS:.f=.o) $(F90_SRCS:.f90=.o)
endif

GARBAGE      = $(PROGS) *.nc
PACKING_LIST = $(C_SRCS) $(F77_SRCS) $(F90_SRCS) Makefile.in README depend

all: $(PROGS)

mcoll_perf: mcoll_perf.o $(LIBRARY)
	$(LINK.c) $< $(LDFLAGS) $(LIBS)

test_bput: test_bput.o $(LIBRARY)
	$(LINK.c) $< $(LDFLAGS) $(LIBS)

mcoll_testf77: mcoll_testf77.o $(LIBRARY)
	$(LINK.f) $< $(LDFLAGS) $(LIBS)

mcoll_testf: mcoll_testf.o $(LIBRARY)
	$(LINK.F90) $< $(LDFLAGS) $(LIBS)

test_bputf: test_bputf.o $(LIBRARY)
	$(LINK.F90) $< $(LDFLAGS) $(LIBS)

test_bputf77: test_bputf77.o $(LIBRARY)
	$(LINK.f) $< $(LDFLAGS) $(LIBS)

check testing: $(PROGS)
	@./mcoll_perf
	@./test_bput
ifeq (@has_fortran@, yes)
	@./mcoll_testf
	@./mcoll_testf77
	@./test_bputf
	@./test_bputf77
endif

verbose_check verbose_testing: $(PROGS)
	./mcoll_perf -v
	./test_bput -v
ifeq (@has_fortran@, yes)
	./mcoll_testf -v
	./mcoll_testf77 -v
	./test_bputf -v
	./test_bputf77 -v
endif

ptest : $(PROGS)
	$(TEST_MPIRUN) -n 4 ./mcoll_perf -f $(TEST_OUT_DIR)/testfile.nc
	$(TEST_MPIRUN) -n 4 ./test_bput     $(TEST_OUT_DIR)/testfile.nc
ifeq (@has_fortran@, yes)
	$(TEST_MPIRUN) -n 4 ./mcoll_testf   $(TEST_OUT_DIR)/testfile.nc
	$(TEST_MPIRUN) -n 4 ./mcoll_testf77 $(TEST_OUT_DIR)/testfile.nc
	$(TEST_MPIRUN) -n 4 ./test_bputf    $(TEST_OUT_DIR)/testfile.nc
	$(TEST_MPIRUN) -n 4 ./test_bputf77  $(TEST_OUT_DIR)/testfile.nc
endif

include $(srcdir)/../../rules.make
include $(srcdir)/depend

