srcdir = @srcdir@
VPATH  = @srcdir@

include ../../macros.make

INCLUDES = -I../../src/lib

SRCS    = testutils.c

HEADERS = testutils.h

OBJS    = $(SRCS:.c=.o)

UTIL_LIB = libtestutils.a

GARBAGE      = $(UTIL_LIB)
PACKING_LIST = $(SRCS) $(HEADERS) Makefile.in

all: $(UTIL_LIB)

$(UTIL_LIB): $(OBJS)
	$(AR) $(ARFLAGS) $@ $<

testutils.o: testutils.c testutils.h

testing check verbose_testing: $(UTIL_LIB)

ptest ptests: $(UTIL_LIB)

include $(srcdir)/../../rules.make

