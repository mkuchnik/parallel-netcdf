srcdir = @srcdir@
VPATH  = @srcdir@

include ../../macros.make

INCLUDES  = -I. -I$(srcdir)

SRCS    = testutils.c

HEADERS = testutils.h

OBJS    = $(SRCS:.c=.o)

PROGS   = libtestutils.a

GARBAGE      = $(PROGS)
PACKING_LIST = $(SRCS) $(HEADERS) Makefile.in

all: $(PROGS)

libtestutils.a: $(OBJS)
	$(AR) $(ARFLAGS) $@ $<

testutils.o: testutils.c testutils.h

testing check verbose_testing:

ptest:

include $(srcdir)/../../rules.make

.NOTPARALLEL: testing check verbose_testing ptest

