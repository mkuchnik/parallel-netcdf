srcdir  = @srcdir@
VPATH   = @srcdir@

include ../../macros.make

INCLUDES  = -I../../src/lib -I$(srcdir)/../common
LDFLAGS  += -L../../src/lib -L../common
LIBS     += -ltestutils -lpnetcdf

SRCS      = test_check_header.c \
            test_check_header1.c

OBJS      = $(SRCS:.c=.o)
PROGS     = $(SRCS:.c=)

GARBAGE      = $(PROGS)
PACKING_LIST = $(SRCS) Makefile.in README

all: $(PROGS)

test_check_header: test_check_header.o $(LIBRARY)
	$(LINK.c) $< $(LDFLAGS) $(LIBS)

test_check_header1: test_check_header1.o $(LIBRARY)
	$(LINK.c) $< $(LDFLAGS) $(LIBS)

include $(srcdir)/../../rules.make

