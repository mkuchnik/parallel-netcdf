srcdir  = @srcdir@
VPATH   = @srcdir@

include ../macros.make

INCLUDES  = -I../src/lib
LDFLAGS  += -L../src/lib
LIBS     += -lpnetcdf $(MATHLIB)

C_SRCS    = aggregation.c \
            write_block_read_column.c

F_SRCS    =

PROGS     = $(C_SRCS:.c=)
OBJS      = $(C_SRCS:.c=.o)
ifeq (@has_fortran@, yes)
PROGS    += $(F_SRCS:.F=)
OBJS     += $(F_SRCS:.F=.o)
endif

GARBAGE      = $(PROGS)

PACKING_LIST = $(C_SRCS) $(F_SRCS) \
               Makefile.in \
               README \
               depend

all: $(PROGS)

install:

uninstall:

aggregation: aggregation.o $(LIBRARY)
	$(LINK.c) $< $(LDFLAGS) $(LIBS)

write_block_read_column: write_block_read_column.o $(LIBRARY)
	$(LINK.c) $< $(LDFLAGS) $(LIBS)

include $(srcdir)/depend

include $(srcdir)/../rules.make

