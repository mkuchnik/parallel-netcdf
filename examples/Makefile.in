srcdir  = @srcdir@
VPATH   = @srcdir@

include ../macros.make

GARBAGE      =

PACKING_LIST = Makefile.in \
               README

SUBDIRS = C tutorial

ifeq (@has_fortran@, yes)
SUBDIRS += F77
SUBDIRS += F90
endif

all:
	@set -e; for i in $(SUBDIRS); do ( cd $$i && $(MAKE) ; ) ; done

install:

uninstall:

clean:
	@set -e; for i in $(SUBDIRS); do ( cd $$i && $(MAKE) clean ; ) ; done

distclean:
	@set -e; for i in $(SUBDIRS); do ( cd $$i && $(MAKE) distclean ; ) ; done
	@if ! [ $(srcdir) -ef `pwd` ] ; then rmdir $(SUBDIRS) ; fi
	@$(RM) -f Makefile

.PHONY: FORCE all clean distclean install uninstall

