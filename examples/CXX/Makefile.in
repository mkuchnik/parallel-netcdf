srcdir  = @srcdir@
VPATH   = @srcdir@

include ../../macros.make

INCLUDES  = -I../../src/lib -I../../src/libcxx
LDFLAGS  += -L../../src/lib
LIBS     := -lpnetcdf $(LIBS)

C_SRCS  = collective_write.cpp \
          nonblocking_write.cpp \
          column_wise.cpp \
          block_cyclic.cpp \
          flexible_api.cpp \
          get_info.cpp \
          hints.cpp \
          put_varn_float.cpp \
          put_varn_int.cpp \
          put_vara.cpp \
          get_vara.cpp

PROGS        = $(C_SRCS:.cpp=)
OBJS         = $(C_SRCS:.cpp=.o)

PAR_PROGS    = $(PROGS)

GARBAGE      = $(PROGS) *.nc

PACKING_LIST = $(C_SRCS) depend Makefile.in

all: $(PROGS)

install:

uninstall:

collective_write: collective_write.o $(LIBRARY)
	$(LINK.cxx) $< $(LDFLAGS) $(LIBS)

nonblocking_write: nonblocking_write.o $(LIBRARY)
	$(LINK.cxx) $< $(LDFLAGS) $(LIBS)

get_info: get_info.o $(LIBRARY)
	$(LINK.cxx) $< $(LDFLAGS) $(LIBS)

column_wise: column_wise.o $(LIBRARY)
	$(LINK.cxx) $< $(LDFLAGS) $(LIBS)

block_cyclic: block_cyclic.o $(LIBRARY)
	$(LINK.cxx) $< $(LDFLAGS) $(LIBS)

put_vara: put_vara.o $(LIBRARY)
	$(LINK.cxx) $< $(LDFLAGS) $(LIBS)

hints: hints.o $(LIBRARY)
	$(LINK.cxx) $< $(LDFLAGS) $(LIBS)

flexible_api: flexible_api.o $(LIBRARY)
	$(LINK.cxx) $< $(LDFLAGS) $(LIBS)

put_varn_int: put_varn_int.o $(LIBRARY)
	$(LINK.cxx) $< $(LDFLAGS) $(LIBS)

put_varn_float: put_varn_float.o $(LIBRARY)
	$(LINK.cxx) $< $(LDFLAGS) $(LIBS)

get_vara: get_vara.o $(LIBRARY)
	$(LINK.cxx) $< $(LDFLAGS) $(LIBS)

ptest: $(PAR_PROGS)
	@for i in $(PAR_PROGS); do ( \
	echo "-----------------------------------------------------" ; \
	echo "$(TEST_MPIRUN) -n 4 ./$$i -q $(TEST_OUTDIR)/testfile.nc" ; \
	echo "-----------------------------------------------------" ; \
	$(TEST_MPIRUN) -n 4 ./$$i -q $(TEST_OUTDIR)/testfile.nc \
	; ) ; done
	@for i in put_varn_int put_varn_float ; do ( \
	echo "-----------------------------------------------------" ; \
	echo "$(TEST_MPIRUN) -n 8 ./$$i -q $(TEST_OUTDIR)/testfile.nc" ; \
	echo "-----------------------------------------------------" ; \
	$(TEST_MPIRUN) -n 8 ./$$i -q $(TEST_OUTDIR)/testfile.nc \
	; ) ; done
	@for i in put_varn_int put_varn_float ; do ( \
	echo "-----------------------------------------------------" ; \
	echo "$(TEST_MPIRUN) -n 3 ./$$i -q $(TEST_OUTDIR)/testfile.nc" ; \
	echo "-----------------------------------------------------" ; \
	$(TEST_MPIRUN) -n 3 ./$$i -q $(TEST_OUTDIR)/testfile.nc \
	; ) ; done

include $(srcdir)/depend
include $(srcdir)/../../rules.make

$(LIBRARY): ;

