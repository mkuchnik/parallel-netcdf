srcdir = @srcdir@
VPATH  = @srcdir@

include ../macros.make

all:
	@cd lib && $(MAKE)
	@if [ @has_fortran@ = yes ] ; then cd libf && $(MAKE) ; fi
	@if [ @has_fortran@ = yes ] ; then cd libf90 && $(MAKE) ; fi
	@cd utils && $(MAKE)

install:
	@cd lib && $(MAKE) install
	@if [ @has_fortran@ = yes ] ; then cd libf && $(MAKE) install ; fi
	@if [ @has_fortran@ = yes ] ; then cd libf90 && $(MAKE) install ; fi
	@cd utils && $(MAKE) install

uninstall:
	@cd lib && $(MAKE) uninstall
	@if [ @has_fortran@ = yes ] ; then cd libf && $(MAKE) uninstall ; fi
	@if [ @has_fortran@ = yes ] ; then cd libf90 && $(MAKE) uninstall ; fi
	@cd utils && $(MAKE) uninstall

clean:
	@cd lib && $(MAKE) clean
	@if [ @has_fortran@ = yes ] ; then cd libf && $(MAKE) clean ; fi
	@if [ @has_fortran@ = yes ] ; then cd libf90 && $(MAKE) clean ; fi
	@cd utils && $(MAKE) clean

distclean:
	@cd lib && $(MAKE) distclean
	@cd libf && $(MAKE) distclean
	@cd libf90 && $(MAKE) distclean
	@cd utils && $(MAKE) distclean
	@$(RM) -f Makefile
	@if ! [ $(srcdir) -ef `pwd` ] ; then rmdir lib libf libf90 utils ; fi

.PHONY: FORCE all clean distclean install uninstall
