srcdir = @srcdir@
VPATH  = @srcdir@

include ../macros.make

SUBDIRS = lib utils
ifeq (@has_fortran@, yes)
   SUBDIRS += libf
   SUBDIRS += libf90
endif

PACKING_LIST = Makefile.in

PACKING_SUBDIRS = lib libf libf90 utils

all:
	@set -e; for i in $(SUBDIRS); do ( cd $$i && $(MAKE) ; ) ; done

install:
	@set -e; for i in $(SUBDIRS); do ( cd $$i && $(MAKE) install ; ) ; done

uninstall:
	@set -e; for i in $(SUBDIRS); do ( cd $$i && $(MAKE) uninstall ; ) ; done

include $(srcdir)/../rules.make
