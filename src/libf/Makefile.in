# $Id$
#
#	Makefile for netcdf libsrc
#

srcdir = @srcdir@
VPATH = @srcdir@

# generated by configure, so it's in the build dir, not srcdirr
include ../../macros.make

INCLUDES = -I. 

LIBRARY 	= ../lib/libnetcdf.a
PROGRAM		= 
ld_netcdf	= -L../lib -lnetcdf

HEADER	= 

MANUAL	= 

LIB_CSRCS = createf.c openf.c enddeff.c closef.c put_vara_int_allf.c \
	put_vara_intf.c put_vara_float_allf.c put_vara_floatf.c \
	put_vara_double_allf.c put_vara_doublef.c get_vara_int_allf.c \
	get_vara_intf.c get_vara_float_allf.c get_vara_floatf.c \
	get_vara_double_allf.c get_vara_doublef.c 

PACKING_LIST = \
	$(LIB_CSRCS) \
	Makefile 

LIB_OBJS = $(LIB_CSRCS:.c=.o)

PROG_CSRCS = 

PROG_OBJS = $(PROG_CSRCS:.c=.o)

GARBAGE		= 

DIST_GARBAGE	= ncconfig.h


all:		$(LIBRARY) $(MANUAL) $(PROGRAM)

install:	

uninstall:

$(PROGRAM):	$(PROG_OBJS)
	$(LINK.c) $(PROG_OBJS) $(LIBS)

include $(srcdir)/../../rules.make

.SUFFIXES: .ln
LINT = lint
LINT.c = $(LINT) $(LINTFLAGS) $(CPPFLAGS)
.c.ln:
	$(LINT.c) -c $<

llib-lnetcdf.ln: $(LIB_CSRCS)
	$(LINT.c) $(LIB_CSRCS) -y -o netcdf

lint: llib-lnetcdf.ln
	$(LINT.c) t_nc.c llib-lnetcdf.ln

